{{ form_start(form, {'attr': {'class': 'form form-horizontal'}}) }}
<div class="form-body">
    <div class="row">
        {# Nom de l'hôtel #}
        <div class="col-md-4">
            <label for="{{ form.name.vars.id }}">{{ form_label(form.name) }}</label>
        </div>
        <div class="col-md-8">
            <div class="form-group has-icon-left">
                <div class="position-relative">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'hotel.form.name.placeholder'|trans}}) }}
                    <div class="form-control-icon">
                        <i class="bi bi-building"></i>
                    </div>
                </div>
                {{ form_errors(form.name) }}
            </div>
        </div>

        {# Adresse #}
        <div class="col-md-4">
            <label for="{{ form.address.vars.id }}">{{ form_label(form.address) }}</label>
        </div>
        <div class="col-md-8">
            <div class="form-group has-icon-left">
                <div class="position-relative">
                    {{ form_widget(form.address, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'hotel.form.address.placeholder'|trans}}) }}
                    <div class="form-control-icon">
                        <i class="bi bi-geo-alt"></i>
                    </div>
                </div>
                {{ form_errors(form.address) }}
            </div>
        </div>

        {# Séparateur visuel #}
        <div class="col-12">
            <hr class="my-4">
            <h5 class="text-muted mb-3">
                <i class="bi bi-person-lines-fill"></i> Informations de contact
            </h5>
        </div>

        {# Nom du contact #}
        <div class="col-md-4">
            <label for="{{ form.contactName.vars.id }}">{{ form_label(form.contactName) }}</label>
        </div>
        <div class="col-md-8">
            <div class="form-group has-icon-left">
                <div class="position-relative">
                    {{ form_widget(form.contactName, {'attr': {'class': 'form-control', 'placeholder': 'hotel.form.contact_name.placeholder'|trans}}) }}
                    <div class="form-control-icon">
                        <i class="bi bi-person-circle"></i>
                    </div>
                </div>
                {{ form_errors(form.contactName) }}
            </div>
        </div>

        {# Email du contact #}
        <div class="col-md-4">
            <label for="{{ form.contactEmail.vars.id }}">{{ form_label(form.contactEmail) }}</label>
        </div>
        <div class="col-md-8">
            <div class="form-group has-icon-left">
                <div class="position-relative">
                    {{ form_widget(form.contactEmail, {'attr': {'class': 'form-control', 'placeholder': 'hotel.form.contact_email.placeholder'|trans}}) }}
                    <div class="form-control-icon">
                        <i class="bi bi-envelope"></i>
                    </div>
                </div>
                {{ form_errors(form.contactEmail) }}
            </div>
        </div>

        {# Téléphone du contact #}
        <div class="col-md-4">
            <label for="{{ form.contactPhone.vars.id }}">{{ form_label(form.contactPhone) }}</label>
        </div>
        <div class="col-md-8">
            <div class="form-group has-icon-left">
                <div class="position-relative">
                    {{ form_widget(form.contactPhone, {'attr': {'class': 'form-control', 'placeholder': 'hotel.form.contact_phone.placeholder'|trans}}) }}
                    <div class="form-control-icon">
                        <i class="bi bi-telephone"></i>
                    </div>
                </div>
                {{ form_errors(form.contactPhone) }}
            </div>
        </div>

        {# Boutons #}
        <div class="col-12 d-flex justify-content-end">
            <a href="{{ path('app_hotel_index') }}" class="btn btn-light-secondary me-1 mb-1">
                <i class="bi bi-x-circle"></i> {{ 'form.button.cancel'|trans }}
            </a>
            <button type="submit" class="btn btn-dark me-1 mb-1">
                <i class="bi bi-check-circle"></i>
                {{ button_label|default('create')|lower == 'update' ? 'form.button.update'|trans : 'form.button.create'|trans }}
            </button>
        </div>
    </div>
</div>
{{ form_end(form) }}
