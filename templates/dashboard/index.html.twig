{% extends 'base.html.twig' %}

{% block title %}{{ 'dashboard.title'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'dashboard.title'|trans }}</h3>
                <p class="text-subtitle text-muted">{{ 'now'|date('d/m/Y') }}</p>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="row">
        <div class="col-12 col-lg-9">
            <div class="row">
                {# Total des Magazines en Stock #}
                <div class="col-6 col-lg-4 col-md-6">
                    <div class="card">
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start">
                                    <div class="stats-icon purple mb-2">
                                        <i class="iconly-boldShow"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">{{ 'stats.magazines_stock'|trans }}</h6>
                                    <h6 class="font-extrabold mb-0">731</h6>
                                    <small class="text-success">
                                        <i class="bi bi-arrow-up-short"></i> {{ 'stats.magazines_stock_change'|trans }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Total des Presentoirs #}
                <div class="col-6 col-lg-4 col-md-6">
                    <div class="card">
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start">
                                    <div class="stats-icon blue mb-2">
                                        <i class="iconly-boldBookmark"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">{{ 'stats.presentoirs'|trans }}</h6>
                                    <h6 class="font-extrabold mb-0">6</h6>
                                    <small class="text-muted">
                                        <i class="bi bi-dash"></i> {{ 'stats.presentoirs_change'|trans }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Magazines Distribués #}
                <div class="col-6 col-lg-4 col-md-6">
                    <div class="card">
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start">
                                    <div class="stats-icon green mb-2">
                                        <i class="iconly-boldAdd-User"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">{{ 'stats.magazines_distributed'|trans }}</h6>
                                    <h6 class="font-extrabold mb-0">0</h6>
                                    <small class="text-muted">
                                        <i class="bi bi-dash"></i> {{ 'stats.magazines_distributed_change'|trans }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Comptes Utilisateurs #}
{#                <div class="col-6 col-lg-4 col-md-6">#}
{#                    <div class="card">#}
{#                        <div class="card-body px-4 py-4-5">#}
{#                            <div class="row">#}
{#                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start">#}
{#                                    <div class="stats-icon red mb-2">#}
{#                                        <i class="iconly-boldProfile"></i>#}
{#                                    </div>#}
{#                                </div>#}
{#                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">#}
{#                                    <h6 class="text-muted font-semibold">{{ 'stats.user_accounts'|trans }}</h6>#}
{#                                    <h6 class="font-extrabold mb-0">{{ total_users|default(0) }}</h6>#}
{#                                </div>#}
{#                            </div>#}
{#                        </div>#}
{#                    </div>#}
{#                </div>#}
            </div>

            {# Statistiques des rôles #}
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>{{ 'stats.user_accounts'|trans }}</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="avatar avatar-lg bg-primary me-3">
                                            <i class="bi bi-shield-check text-white"></i>
                                        </div>
                                        <div>
                                            <h5 class="mb-0">{{ 'stats.role.admin'|trans }}</h5>
                                            <h6 class="text-muted mb-0">{{ 'stats.role.accounts'|trans({'%count%': admin_count|default(0)}) }}</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="avatar avatar-lg bg-success me-3">
                                            <i class="bi bi-person-check text-white"></i>
                                        </div>
                                        <div>
                                            <h5 class="mb-0">{{ 'stats.role.driver'|trans }}</h5>
                                            <h6 class="text-muted mb-0">{{ 'stats.role.accounts'|trans({'%count%': driver_count|default(0)}) }}</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="avatar avatar-lg bg-info me-3">
                                            <i class="bi bi-people text-white"></i>
                                        </div>
                                        <div>
                                            <h5 class="mb-0">{{ 'stats.role.statistics'|trans }}</h5>
                                            <h6 class="text-muted mb-0">{{ 'stats.role.accounts'|trans({'%count%': statistics_count|default(0)}) }}</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Graphique Distribution Mensuelle #}
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>{{ 'distribution.title'|trans }}</h4>
                            <p class="text-subtitle text-muted">{{ 'distribution.subtitle'|trans }}</p>
                        </div>
                        <div class="card-body">
                            <div id="chart-distribution"></div>
                        </div>
                    </div>
                </div>
            </div>

            {# Activités récentes #}
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>{{ 'activities.title'|trans }}</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th>{{ 'activities.action'|trans }}</th>
                                        <th>{{ 'activities.user'|trans }}</th>
                                        <th>{{ 'activities.date'|trans }}</th>
                                        <th>{{ 'activities.status'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td><i class="bi bi-box-seam text-primary"></i> {{ 'activities.distribution'|trans }}</td>
                                        <td>{{ 'activities.user.admin'|trans }}</td>
                                        <td>{{ 'now'|date('d/m/Y H:i') }}</td>
                                        <td><span class="badge bg-success">{{ 'activities.status.completed'|trans }}</span></td>
                                    </tr>
                                    <tr>
                                        <td><i class="bi bi-person-plus text-info"></i> {{ 'activities.new_user'|trans }}</td>
                                        <td>{{ 'activities.user.system'|trans }}</td>
                                        <td>{{ 'now'|date('d/m/Y H:i') }}</td>
                                        <td><span class="badge bg-info">{{ 'activities.status.info'|trans }}</span></td>
                                    </tr>
                                    <tr>
                                        <td><i class="bi bi-truck text-warning"></i> {{ 'activities.delivery'|trans }}</td>
                                        <td>{{ 'activities.user.driver'|trans }}</td>
                                        <td>{{ 'now'|date('d/m/Y H:i') }}</td>
                                        <td><span class="badge bg-warning">{{ 'activities.status.in_progress'|trans }}</span></td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Sidebar droite #}
        <div class="col-12 col-lg-3">
            <div class="card">
                <div class="card-body py-4 px-4">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-xl">
                            <img src="{{ asset('assets/images/faces/1.jpg') }}" alt="Avatar">
                        </div>
                        <div class="ms-3 name">
                            <h5 class="font-bold">{{ app.user.name }}</h5>
                            <h6 class="text-muted mb-0">{{ app.user.email }}</h6>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4>{{ 'quick_access.title'|trans }}</h4>
                </div>
                <div class="card-content pb-4">
                    <div class="px-4 py-3">
                        <a href="{{ path('app_user_index') }}" class="btn btn-primary btn-block mb-2">
                            <i class="bi bi-people"></i> {{ 'quick_access.users'|trans }}
                        </a>
                        <a href="#" class="btn btn-success btn-block mb-2">
                            <i class="bi bi-box-seam"></i> {{ 'quick_access.magazines'|trans }}
                        </a>
                        <a href="#" class="btn btn-info btn-block mb-2">
                            <i class="bi bi-truck"></i> {{ 'quick_access.distributions'|trans }}
                        </a>
                        <a href="#" class="btn btn-warning btn-block">
                            <i class="bi bi-bookmark"></i> {{ 'quick_access.presentoirs'|trans }}
                        </a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4>{{ 'quick_stats.title'|trans }}</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>{{ 'quick_stats.stock_available'|trans }}</span>
                        <span class="font-bold">97%</span>
                    </div>
                    <div class="progress mb-3" style="height: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 97%"></div>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <span>{{ 'quick_stats.distributions'|trans }}</span>
                        <span class="font-bold">0%</span>
                    </div>
                    <div class="progress mb-3" style="height: 10px;">
                        <div class="progress-bar bg-danger" role="progressbar" style="width: 0%"></div>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <span>{{ 'quick_stats.presentoirs_active'|trans }}</span>
                        <span class="font-bold">100%</span>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendors/apexcharts/apexcharts.js') }}"></script>
    <script>
        var optionsDistribution = {
            series: [{
                name: "{{ 'distribution.magazines'|trans }}",
                data: [45, 52, 38, 65, 70, 58, 85, 92, 75, 88, 95, 105]
            }],
            chart: {
                type: 'bar',
                height: 350,
                toolbar: { show: false }
            },
            plotOptions: {
                bar: {
                    borderRadius: 10,
                    columnWidth: '50%',
                }
            },
            dataLabels: { enabled: false },
            stroke: {
                show: true,
                width: 2,
                colors: ['transparent']
            },
            xaxis: {
                categories: [
                    "{{ 'month.jan'|trans }}",
                    "{{ 'month.feb'|trans }}",
                    "{{ 'month.mar'|trans }}",
                    "{{ 'month.apr'|trans }}",
                    "{{ 'month.may'|trans }}",
                    "{{ 'month.jun'|trans }}",
                    "{{ 'month.jul'|trans }}",
                    "{{ 'month.aug'|trans }}",
                    "{{ 'month.sep'|trans }}",
                    "{{ 'month.oct'|trans }}",
                    "{{ 'month.nov'|trans }}",
                    "{{ 'month.dec'|trans }}"
                ],
            },
            yaxis: {
                title: { text: "{{ 'distribution.y_axis'|trans }}" }
            },
            fill: {
                opacity: 1,
                colors: ['#435ebe']
            },
            tooltip: {
                y: {
                    formatter: function (val) {
                        return val + " {{ 'distribution.unit'|trans }}"
                    }
                }
            },
            colors: ['#435ebe']
        };

        var chartDistribution = new ApexCharts(document.querySelector("#chart-distribution"), optionsDistribution);
        chartDistribution.render();
    </script>
{% endblock %}
