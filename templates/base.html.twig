<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'dashboard.title'|trans }}{% endblock %} - Renzicom</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/iconly/bold.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/perfect-scrollbar/perfect-scrollbar.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/bootstrap-icons/bootstrap-icons.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.svg') }}" type="image/x-icon">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/vendors/simple-datatables/style.css') }}">
    {% endblock %}
</head>

<body>
<div id="app">

    {# Sidebar #}
    <div id="sidebar" class="active">
        <div class="sidebar-wrapper active">
            <div class="sidebar-header">
                <div class="d-flex justify-content-between">
                    <div class="logo">
                        <h3>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round" class="lucide lucide-building2 h-8 w-8 mr-3">
                                <path d="M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18Z"></path>
                                <path d="M6 12H4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2"></path>
                                <path d="M18 9h2a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2h-2"></path>
                                <path d="M10 6h4"></path>
                                <path d="M10 10h4"></path>
                                <path d="M10 14h4"></path>
                                <path d="M10 18h4"></path>
                            </svg>
                            Renzicom
                        </h3>
                    </div>
                    <div class="toggler">
                        <a href="#" class="sidebar-hide d-xl-none d-block">
                            <i class="bi bi-x bi-middle"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="sidebar-menu">
                <ul class="menu">
                    <li class="sidebar-item {% if app.request.get('_route') == 'app_dashboard' %}active{% endif %}">
                        <a href="{{ path('app_dashboard') }}" class='sidebar-link'>
                            <i class="bi bi-grid-fill"></i>
                            <span>{{ 'nav.dashboard'|trans }}</span>
                        </a>
                    </li>
                    <li class="sidebar-item {% if app.request.get('_route') starts with 'app_distribution' %}active{% endif %}">
                        <a href="{{ path('app_distribution_index') }}" class='sidebar-link'>
                            <i class="bi bi-truck"></i>
                            <span>{{ 'nav.distributions'|trans }}</span>
                        </a>
                    </li>
                    <li class="sidebar-item {% if app.request.get('_route') starts with 'app_user' %}active{% endif %}">
                        <a href="{{ path('app_user_index') }}" class='sidebar-link'>
                            <i class="bi bi-people-fill"></i>
                            <span>{{ 'nav.users'|trans }}</span>
                        </a>
                    </li>

                    <li class="sidebar-item {% if app.request.get('_route') starts with 'app_warehouse' %}active{% endif %}">
                        <a href="{{ path('app_warehouse_index') }}" class='sidebar-link'>
                            <i class="bi    bi-building"></i>
                            <span>{{ 'nav.warehouses'|trans }}</span>
                        </a>
                    </li>
                    <li class="sidebar-item {% if app.request.get('_route') starts with 'app_product' %}active{% endif %}">
                        <a href="{{ path('app_product_index') }}" class='sidebar-link'>
                            <i class="bi bi-book"></i>
                            <span>{{ 'nav.products'|trans }}</span>
                        </a>
                    </li>
                    <li class="sidebar-item {% if app.request.get('_route') starts with 'app_rack' %}active{% endif %}">
                        <a href="{{ path('app_rack_index') }}" class='sidebar-link'>
                            <i class="bi bi-list"></i>
                            <span>{{ 'nav.rack'|trans }}</span>
                        </a>
                    </li>
                    <li class="sidebar-item {% if app.request.get('_route') starts with 'app_stock' %}active{% endif %}">
                        <a href="{{ path('app_stock_index') }}" class='sidebar-link'>
                            <i class="bi bi-box-seam"></i>
                            <span>{{ 'nav.stocks'|trans }}</span>
                        </a>
                    </li>

                    {% block sidebar_menu %}{% endblock %}

                    <li class="sidebar-item">
                        <div class="px-3 py-2">
                            <select class="form-select form-select-sm"
                                    onchange="if (this.value) window.location.href = this.value;">
                                <option value="{{ path(
                                    app.request.attributes.get('_route'),
                                    app.request.attributes.get('_route_params')|merge({'_locale': 'fr'})
                                ) }}"
                                    {{ app.request.locale == 'fr' ? 'selected' : '' }}>
                                    ðŸ‡«ðŸ‡· FranÃ§ais
                                </option>

                                <option value="{{ path(
                                    app.request.attributes.get('_route'),
                                    app.request.attributes.get('_route_params')|merge({'_locale': 'en'})
                                ) }}"
                                    {{ app.request.locale == 'en' ? 'selected' : '' }}>
                                    ðŸ‡¬ðŸ‡§ English
                                </option>
                            </select>
                        </div>
                    </li>
                </ul>
            </div>
            <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
        </div>
    </div>

    {# Main Content #}
    <div id="main">
        <header class='mb-3'>
            <nav class="navbar navbar-expand navbar-light ">
                <div class="container-fluid">
                    <a href="#" class="burger-btn d-block">
                        <i class="bi bi-justify fs-3"></i>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0"></ul>
                        {% if app.user %}
                            <div class="dropdown">
                                <a href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-menu d-flex">
                                        <div class="user-name text-end me-3">
                                            <h6 class="mb-0 text-gray-600">{{ app.user.name }}</h6>
                                            <p class="mb-0 text-sm text-gray-600">{{ app.user.email }}</p>
                                        </div>
                                        <div class="user-img d-flex align-items-center">
                                            <div class="avatar avatar-md">
                                                <img src="{{ asset('assets/images/faces/2.jpg') }}">
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <h6 class="dropdown-header">Hello, {{ app.user.name }}!</h6>
                                    </li>
                                    <li><a class="dropdown-item" href="#"><i class="icon-mid bi bi-person me-2"></i>
                                            {{ 'nav.my.profile'|trans }}</a></li>
                                    <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <form method="post"
                                              action="{{ path('app_logout') }}"
                                              onsubmit="return confirm('{{ 'nav.logout.confirm'|trans|e('js') }}')">
                                            <button type="submit" class="dropdown-item">
                                                <i class="icon-mid bi bi-box-arrow-left me-2"></i>
                                                {{ 'nav.logout'|trans }}
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </header>

        <div class="page-heading">
            {% block page_title %}
                <h3>{{ 'dashboard.title'|trans }}</h3>
            {% endblock %}
        </div>

        <div class="page-content">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        <footer>
            <div class="footer clearfix mb-0 text-muted">
                <div class="float-start">
                    <p>{{ 'now'|date('Y') }} &copy; Renzicom</p>
                </div>
            </div>
        </footer>
    </div>
</div>

{% block javascripts %}
    <script src="{{ asset('assets/vendors/simple-datatables/simple-datatables.js') }}"></script>
    <script src="{{ asset('assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/vendors/apexcharts/apexcharts.js') }}"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
    <script>
        function initDataTable(tableId, options = {}) {
            let table = document.querySelector(tableId);
            if (!table) return null;
            const defaultOptions = {
                searchable: true,
                fixedHeight: false,
                perPage: 10,
                labels: {
                    placeholder: "{{ 'datatable.search'|trans }}",
                    noRows: "{{ 'datatable.no_data'|trans }}",
                    info: "{{ 'datatable.info'|trans }}"
                }
            };

            return new simpleDatatables.DataTable(table, {...defaultOptions, ...options});
        }

        function confirmDelete(id, formId = null) {
            if (confirm("{{ 'user.confirm_delete'|trans }}")) {
                const form = formId ? document.getElementById(formId) : document.getElementById('delete-form-' + id);
                if (form) form.submit();
            }
        }
    </script>
{% endblock %}
</body>
</html>
