{#                                <a href="?_locale=fr" class="btn btn-sm {{ app.request.locale == 'fr' ? 'btn-primary' : 'btn-outline-primary' }} flex-fill">#}
{#                                    ðŸ‡«ðŸ‡· FR#}
{#                                </a>#}
{#                                <a href="?_locale=en" class="btn btn-sm {{ app.request.locale == 'en' ? 'btn-primary' : 'btn-outline-primary' }} flex-fill">#}
{#                                    ðŸ‡¬ðŸ‡§ EN#}
{#                                </a>#}
{#                            </div>#}
{#                        </div>#}
{#                    </li>#}
                </ul>
            </div>
            <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
        </div>
    </div>

    {# Main Content #}
    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>

        <div class="page-heading">
            {% block page_title %}
                <h3>{{ 'dashboard.title'|trans }}</h3>
            {% endblock %}
        </div>

        <div class="page-content">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        <footer>
            <div class="footer clearfix mb-0 text-muted">
                <div class="float-start">
                    <p>{{ 'now'|date('Y') }} &copy; Renzicom</p>
                </div>
{#                <div class="float-end">#}
{#                    <p>{{ 'footer.powered_by'|trans }} <span class="text-primary">Symfony</span></p>#}
{#                </div>#}
            </div>
        </footer>
    </div>
</div>

<script src="{{ asset('assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js') }}"></script>
<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
<script src="{{ asset('assets/js/main.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
