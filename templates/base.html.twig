    <script>
        function initDataTable(tableId, options = {}) {
            let table = document.querySelector(tableId);
            if (!table) return null;
            const defaultOptions = {
                searchable: true,
                fixedHeight: false,
                perPage: 10,
                labels: {
                    placeholder: "{{ 'datatable.search'|trans }}",
                    noRows: "{{ 'datatable.no_data'|trans }}",
                    info: "{{ 'datatable.info'|trans }}"
                }
            };

            return new simpleDatatables.DataTable(table, {...defaultOptions, ...options});
        }
    </script>
    <script>
        $(document).ready(function() {
            // ========== MODAL DE SUPPRESSION ==========
            var deleteFormToSubmit = null;

            // GÃ©rer le clic sur le bouton de confirmation de suppression
            $('#btnConfirmDelete').on('click', function() {
                if (deleteFormToSubmit) {
                    deleteFormToSubmit.submit();
                }
                $('#deleteConfirmModal').modal('hide');
            });

            // RÃ©initialiser quand le modal se ferme
            $('#deleteConfirmModal').on('hidden.bs.modal', function() {
                deleteFormToSubmit = null;
            });

            // ========== MODAL DE LOGOUT ==========
            // GÃ©rer le clic sur le bouton de confirmation de logout
            $('#btnConfirmLogout').on('click', function() {
                $('#logout-form').submit();
            });
        });

        // Fonction pour ouvrir le modal de confirmation de suppression
        function confirmDelete(id, formId = null) {
            var form = formId
                ? $('#' + formId)
                : $('#delete-form-' + id);

            if (form.length) {
                deleteFormToSubmit = form;
                $('#deleteConfirmModal').modal('show');
            }
        }

        // Fonction pour ouvrir le modal de confirmation de logout
        function confirmLogout() {
            $('#logoutConfirmModal').modal('show');
        }
    </script>
    <script>
        var deleteFormToSubmit = null;

        // Fonction de confirmation de suppression
        function confirmDelete(id, formId = null) {
            // RÃ©cupÃ©rer le formulaire
            var form = formId
                ? $('#' + formId)
                : $('#delete-form-' + id);

            if (form.length) {
                // Stocker le formulaire
                deleteFormToSubmit = form;

                // Ouvrir le modal
                $('#deleteConfirmModal').modal('show');
            }
        }

        $(document).ready(function() {
            // Quand on clique sur le bouton de confirmation dans le modal
            $('#btnConfirmDelete').on('click', function() {
                // Soumettre le formulaire
                if (deleteFormToSubmit) {
                    deleteFormToSubmit.submit();
                }

                // Fermer le modal
                $('#deleteConfirmModal').modal('hide');
            });

            // RÃ©initialiser quand le modal se ferme
            $('#deleteConfirmModal').on('hidden.bs.modal', function() {
                deleteFormToSubmit = null;
            });
        });
    </script>
    <script>
        function initExport(exportUrl) {
            $('#btnExport').on('click', function() {
                $('#exportConfirmModal').modal('show');
            });

            $('#btnConfirmExport').on('click', function() {
                $('#exportConfirmModal').modal('hide');
                $('#exportProgressModal').modal('show');

                $.ajax({
                    url: exportUrl,
                    type: 'POST',
                    dataType: 'json',
                    success: function(response) {
                        if (response.success) {
                            const link = document.createElement('a');
                            link.href = response.download_url;
                            link.download = response.filename;
                            document.body.appendChild(link);
                            link.click();
                            document.body.removeChild(link);

                            setTimeout(function() {
                                $('#exportProgressModal').modal('hide');
                            }, 1500);
                        } else {
                            $('#exportProgressModal').modal('hide');
                        }
                    },
                    error: function(xhr, status, error) {
                        $('#exportProgressModal').modal('hide');
                        console.error('Export error:', error);
                    }
                });
            });
        }
    </script>
