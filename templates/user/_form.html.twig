{{ form_start(form, {'attr': {'class': 'form form-horizontal'}}) }}
<div class="form-body">
    <div class="row">
        {# Nom #}
        <div class="col-md-4">
            <label for="{{ form.name.vars.id }}">{{ form_label(form.name) }}</label>
        </div>
        <div class="col-md-8">
            <div class="form-group has-icon-left">
                <div class="position-relative">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom complet'}}) }}
                    <div class="form-control-icon">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
                {{ form_errors(form.name) }}
            </div>
        </div>

        {# Email #}
        <div class="col-md-4">
            <label for="{{ form.email.vars.id }}">{{ form_label(form.email) }}</label>
        </div>
        <div class="col-md-8">
            <div class="form-group has-icon-left">
                <div class="position-relative">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'exemple@email.com'}}) }}
                    <div class="form-control-icon">
                        <i class="bi bi-envelope"></i>
                    </div>
                </div>
                {{ form_errors(form.email) }}
            </div>
        </div>

        {# Rôle #}
        <div class="col-md-4">
            <label for="{{ form.role.vars.id }}">{{ form_label(form.role) }}</label>
        </div>
        <div class="col-md-8">
            <div class="form-group has-icon-left">
                <div class="position-relative">
                    {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
                    <div class="form-control-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                </div>
                {{ form_errors(form.role) }}
            </div>
        </div>

        {# Mot de passe #}
        <div class="col-md-4">
            <label for="{{ form.password.vars.id }}">{{ form_label(form.password) }}</label>
        </div>
        <div class="col-md-8">
            <div class="form-group has-icon-left">
                <div class="position-relative">
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': button_label|default('Créer') == 'Update' ? 'Laissez vide pour conserver' : 'Mot de passe'}}) }}
                    <div class="form-control-icon">
                        <i class="bi bi-lock"></i>
                    </div>
                </div>
                {% if button_label|default('') == 'Update' %}
                    <small class="text-muted">Laissez vide pour conserver le mot de passe actuel</small>
                {% endif %}
                {{ form_errors(form.password) }}
            </div>
        </div>

        {# Boutons #}
        <div class="col-12 d-flex justify-content-end">
            <a href="{{ path('app_user_index') }}" class="btn btn-light-secondary me-1 mb-1">
                <i class="bi bi-x-circle"></i> Annuler
            </a>
            <button type="submit" class="btn btn-primary me-1 mb-1">
                <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
</div>
{{ form_end(form) }}
