{% extends 'base.html.twig' %}

{% block title %}{{ 'stock_movement.list.title'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'stock_movement.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'nav.stock.movements'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title mb-0">{{ 'stock_movement.list.title'|trans }}</h4>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_stock_movement_export_csv') }}" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-filetype-csv"></i> {{ 'stock_movement.actions.export_csv'|trans }}
                    </a>
                    <a href="{{ path('app_stock_movement_export_pdf') }}" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-file-earmark-pdf"></i> {{ 'stock_movement.actions.export_pdf'|trans }}
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="movements-table">
                    <thead>
                        <tr>
                            <th>{{ 'stock_movement.export.date'|trans }}</th>
                            <th>{{ 'stock_movement.export.product'|trans }}</th>
                            <th>{{ 'stock_movement.export.warehouse'|trans }}</th>
                            <th>{{ 'stock_movement.export.quantity'|trans }}</th>
                            <th>{{ 'stock_movement.export.type'|trans }}</th>
                            <th>{{ 'stock_movement.export.user'|trans }}</th>
                            <th>{{ 'stock_movement.export.comment'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for movement in movements %}
                        <tr>
                            <td>{{ movement.createdAt|date('d/m/Y H:i:s') }}</td>
                            <td>{{ movement.product.name }}</td>
                            <td>{{ movement.warehouse.name }}</td>
                            <td>
                                <span class="badge {{ movement.quantity > 0 ? 'bg-success' : 'bg-danger' }}">
                                    {{ movement.quantity > 0 ? '+' : '' }}{{ movement.quantity }}
                                </span>
                            </td>
                            <td>
                                {% set type_class = 'bg-secondary' %}
                                {% if movement.type == 'INITIAL' %}{% set type_class = 'bg-info' %}
                                {% elseif movement.type == 'IN' %}{% set type_class = 'bg-success' %}
                                {% elseif movement.type == 'OUT' %}{% set type_class = 'bg-danger' %}
                                {% elseif movement.type == 'ADJUSTMENT' %}{% set type_class = 'bg-warning' %}
                                {% elseif movement.type == 'RETURN' %}{% set type_class = 'bg-primary' %}
                                {% endif %}
                                <span class="badge {{ type_class }}">{{ movement.type }}</span>
                            </td>
                            <td>{{ movement.user ? movement.user.name : 'stock_movement.export.system'|trans }}</td>
                            <td>{{ movement.comment|default('-') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">{{ 'stock_movement.no_movements'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        initDataTable('#movements-table');
    </script>
{% endblock %}
