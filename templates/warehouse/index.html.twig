{% extends 'base.html.twig' %}

{% block title %}{{ 'warehouse.list.title'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'warehouse.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'breadcrumb.warehouses'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/vendors/simple-datatables/style.css') }}">
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ 'warehouse.list.title'|trans }}</h4>
                <a href="{{ path('app_warehouse_new', {'_locale': app.request.locale}) }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> {{ 'warehouse.actions.new'|trans }}
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                    <tr>
                        <th>{{ 'warehouse.table.id'|trans }}</th>
                        <th>{{ 'warehouse.table.name'|trans }}</th>
                        <th>{{ 'warehouse.table.address'|trans }}</th>
{#                        <th>{{ 'warehouse.table.images'|trans }}</th>#}
                        <th>{{ 'warehouse.table.created_at'|trans }}</th>
                        <th>{{ 'warehouse.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for warehouse in warehouses %}
                        <tr>
                            <td>{{ warehouse.id }}</td>
                            <td>{{ warehouse.name }}</td>
                            <td>{{ warehouse.address|default('-') }}</td>
{#                            <td>#}
{#                                <span class="badge bg-info">#}
{#                                    {{ warehouse.images|length }}#}
{#                                    {% if warehouse.images|length > 1 %}#}
{#                                        {{ 'warehouse.table.images_count'|trans }}#}
{#                                    {% else %}#}
{#                                        {{ 'warehouse.table.image_count'|trans }}#}
{#                                    {% endif %}#}
{#                                </span>#}
{#                            </td>#}
                            <td>{{ warehouse.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_warehouse_show', {'id': warehouse.id, '_locale': app.request.locale}) }}"
                                       class="btn btn-sm btn-info"
                                       title="{{ 'warehouse.actions.show'|trans }}">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_warehouse_edit', {'id': warehouse.id, '_locale': app.request.locale}) }}"
                                       class="btn btn-sm btn-warning"
                                       title="{{ 'warehouse.actions.edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ warehouse.id }})"
                                            title="{{ 'warehouse.actions.delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                {# Formulaire de suppression cach√© #}
                                <form id="delete-form-{{ warehouse.id }}"
                                      action="{{ path('app_warehouse_delete', {'id': warehouse.id, '_locale': app.request.locale}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ warehouse.id) }}">
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">{{ 'warehouse.list.no_warehouses'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendors/simple-datatables/simple-datatables.js') }}"></script>
    <script>
        let table1 = document.querySelector('#table1');
        let dataTable = new simpleDatatables.DataTable(table1, {
            searchable: true,
            fixedHeight: false,
            perPage: 10,
            labels: {
                placeholder: "{{ 'datatable.search'|trans }}",
                noRows: "{{ 'datatable.no_data'|trans }}",
                info: "{{ 'datatable.info'|trans }}"
            }
        });

        function confirmDelete(warehouseId) {
            if (confirm("{{ 'warehouse.confirm_delete'|trans }}")) {
                document.getElementById('delete-form-' + warehouseId).submit();
            }
        }
    </script>
{% endblock %}
