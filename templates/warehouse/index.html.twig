{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ 'warehouse.list.title'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'warehouse.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'breadcrumb.warehouses'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ 'warehouse.list.title'|trans }}</h4>
                <a href="{{ path('app_warehouse_new') }}" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i> {{ 'warehouse.actions.new'|trans }}
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="warehouses-table">
                    <thead>
                    <tr>
                        <th>{{ 'warehouse.table.id'|trans }}</th>
                        <th>{{ 'warehouse.table.name'|trans }}</th>
                        <th>{{ 'warehouse.table.address'|trans }}</th>
                        <th>{{ 'warehouse.table.created_at'|trans }}</th>
                        <th>{{ 'warehouse.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for warehouse in warehouses %}
                        <tr>
                            <td>{{ warehouse.id }}</td>
                            <td>
                                <i class="bi bi-building text-primary"></i>
                                <strong>{{ warehouse.name }}</strong>
                            </td>
                            <td>{{ warehouse.address ?? '-' }}</td>
                            <td>{{ warehouse.createdAt ? warehouse.createdAt|date('d/m/Y H:i') : '' }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_warehouse_edit', {'id': warehouse.id}) }}"
                                       class="btn btn-sm btn-dark"
                                       title="{{ 'warehouse.actions.edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ warehouse.id }})"
                                            title="{{ 'warehouse.actions.delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                {# Formulaire de suppression cachÃ© #}
                                <form id="delete-form-{{ warehouse.id }}"
                                      action="{{ path('app_warehouse_delete', {'id': warehouse.id}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ warehouse.id) }}">
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">{{ 'warehouse.list.no_warehouses'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        initDataTable('#warehouses-table');
    </script>
{% endblock %}
