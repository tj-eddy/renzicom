{% extends 'base.html.twig' %}

{% block title %}Distribution{% endblock %}

{% block body %}
    <h1>Distribution</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ distribution.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ distribution.quantity }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ distribution.status }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ distribution.destination }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ distribution.createdAt ? distribution.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CompletedAt</th>
                <td>{{ distribution.completedAt ? distribution.completedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_distribution_index') }}">back to list</a>

    <a href="{{ path('app_distribution_edit', {'id': distribution.id}) }}">edit</a>

    {{ include('distribution/_delete_form.html.twig') }}
{% endblock %}
