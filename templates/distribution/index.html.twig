{% extends 'base.html.twig' %}

{% block title %}{{ 'distribution.list.title'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'distribution.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'breadcrumb.distributions'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .status-actions {
            display: flex;
            gap: 5px;
            flex-wrap: wrap;
        }
        .status-actions form {
            display: inline-block;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ 'distribution.list.title'|trans }}</h4>
                <a href="{{ path('app_distribution_new', {'_locale': app.request.locale}) }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> {{ 'distribution.actions.new'|trans }}
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="distribution-table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>{{ 'distribution.table.product'|trans }}</th>
                        <th>{{ 'distribution.table.quantity'|trans }}</th>
                        <th>{{ 'distribution.table.user'|trans }}</th>
                        <th>{{ 'distribution.table.destination'|trans }}</th>
                        <th>{{ 'distribution.table.status'|trans }}</th>
                        <th>{{ 'distribution.table.created_at'|trans }}</th>
                        <th>{{ 'distribution.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for distribution in distributions %}
                        <tr>
                            <td>{{ distribution.id }}</td>
                            <td>
                                {{ distribution.product ? distribution.product.name : 'N/A' }}
                                {% if distribution.product %}
                                    <br>
                                    <small class="text-muted">
                                        {% if distribution.product.yearEdition %}
                                            {{ distribution.product.yearEdition }}
                                        {% endif %}
                                        {% if distribution.product.language %}
                                            - {{ distribution.product.language }}
                                        {% endif %}
                                    </small>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-primary">{{ distribution.quantity }}</span>
                            </td>
                            <td>{{ distribution.user ? distribution.user.name : 'N/A' }}</td>
                            <td>
                                <small>{{ distribution.destination }}</small>
                            </td>
                            <td>
                                <span class="badge {{ distribution.statusBadgeClass }}">
                                    {{ distribution.statusLabel|trans }}
                                </span>
                                <div class="status-actions mt-2">
                                    {# Bouton "Démarrer" si en préparation #}
                                    {% if distribution.status == constant('App\\Entity\\Distribution::STATUS_PREPARING') %}
                                        <form method="post" action="{{ path('app_distribution_change_status', {'id': distribution.id, 'status': constant('App\\Entity\\Distribution::STATUS_IN_PROGRESS'), '_locale': app.request.locale}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('change-status' ~ distribution.id) }}">
                                            <button type="submit" class="btn btn-xs btn-warning" title="{{ 'distribution.actions.start'|trans }}">
                                                <i class="bi bi-play-circle"></i>
                                            </button>
                                        </form>
                                    {% endif %}

                                    {# Bouton "Livrer" si en cours #}
                                    {% if distribution.status == constant('App\\Entity\\Distribution::STATUS_IN_PROGRESS') %}
                                        <form method="post" action="{{ path('app_distribution_change_status', {'id': distribution.id, 'status': constant('App\\Entity\\Distribution::STATUS_DELIVERED'), '_locale': app.request.locale}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('change-status' ~ distribution.id) }}">
                                            <button type="submit" class="btn btn-xs btn-success" title="{{ 'distribution.actions.complete'|trans }}">
                                                <i class="bi bi-check-circle"></i>
                                            </button>
                                        </form>
                                    {% endif %}

                                    {# Bouton "Annuler" si pas encore livré #}
                                    {% if distribution.status != constant('App\\Entity\\Distribution::STATUS_DELIVERED') and distribution.status != constant('App\\Entity\\Distribution::STATUS_CANCELLED') %}
                                        <form method="post" action="{{ path('app_distribution_change_status', {'id': distribution.id, 'status': constant('App\\Entity\\Distribution::STATUS_CANCELLED'), '_locale': app.request.locale}) }}" onsubmit="return confirm('{{ 'distribution.confirm_cancel'|trans }}')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('change-status' ~ distribution.id) }}">
                                            <button type="submit" class="btn btn-xs btn-secondary" title="{{ 'distribution.actions.cancel'|trans }}">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </form>
                                    {% endif %}

                                    {# Bouton "Réactiver" si annulé #}
                                    {% if distribution.status == constant('App\\Entity\\Distribution::STATUS_CANCELLED') %}
                                        <form method="post" action="{{ path('app_distribution_change_status', {'id': distribution.id, 'status': constant('App\\Entity\\Distribution::STATUS_PREPARING'), '_locale': app.request.locale}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('change-status' ~ distribution.id) }}">
                                            <button type="submit" class="btn btn-xs btn-info" title="{{ 'distribution.actions.reactivate'|trans }}">
                                                <i class="bi bi-arrow-clockwise"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </td>
                            <td>{{ distribution.createAt ? distribution.createAt|date('d/m/Y H:i') : '-' }}</td>
                            <td>
                                <div class="btn-group-vertical" role="group">

                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ distribution.id }})"
                                            title="{{ 'distribution.actions.delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <form id="delete-form-{{ distribution.id }}"
                                      action="{{ path('app_distribution_delete', {'id': distribution.id, '_locale': app.request.locale}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ distribution.id) }}">
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">{{ 'distribution.list.no_distributions'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>
        initDataTable('#distrubution-table');
    </script>
{% endblock %}
