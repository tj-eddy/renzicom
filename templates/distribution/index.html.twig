{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ 'distribution.list.title'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'distribution.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'breadcrumb.distributions'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ 'distribution.list.title'|trans }}</h4>
                <a href="{{ path('app_distribution_new') }}" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i> {{ 'distribution.actions.new'|trans }}
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="distributions-table">
                    <thead>
                    <tr>
                        <th>{{ 'distribution.table.id'|trans }}</th>
                        <th>{{ 'distribution.table.user'|trans }}</th>
                        <th>{{ 'distribution.table.product'|trans }}</th>
                        <th>{{ 'distribution.table.quantity'|trans }}</th>
                        <th>{{ 'distribution.table.status'|trans }}</th>
                        <th>{{ 'distribution.table.destination'|trans }}</th>
                        <th>{{ 'distribution.table.progress'|trans }}</th>
                        <th>{{ 'distribution.table.created_at'|trans }}</th>
                        <th>{{ 'distribution.table.completed_at'|trans }}</th>
                        <th>{{ 'distribution.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for distribution in distributions %}
                        <tr>
                            <td>{{ distribution.id }}</td>
                            <td>
                                {% if distribution.user %}
                                    <i class="bi bi-person-circle text-primary"></i>
                                    <a href="{{ path('app_user_edit', {'id': distribution.user.id}) }}"
                                       class="text-decoration-none">
                                        {{ distribution.user.name }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if distribution.product %}
                                    <i class="bi bi-book text-info"></i>
                                    <a href="{{ path('app_product_edit', {'id': distribution.product.id}) }}"
                                       class="text-decoration-none">
                                        {{ distribution.product.name }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    <i class="bi bi-box"></i> {{ distribution.quantity }}
                                </span>
                            </td>
                            <td>
                                {% if distribution.status == 'preparing' %}
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-hourglass"></i> {{ 'distribution.statuses.preparing'|trans }}
                                    </span>
                                {% elseif distribution.status == 'in_progress' %}
                                    <span class="badge bg-primary">
                                        <i class="bi bi-truck"></i> {{ 'distribution.statuses.in_progress'|trans }}
                                    </span>
                                {% elseif distribution.status == 'delivered' %}
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> {{ 'distribution.statuses.delivered'|trans }}
                                    </span>
                                {% elseif distribution.status == 'cancelled' %}
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> {{ 'distribution.statuses.cancelled'|trans }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ distribution.status }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if distribution.destination %}
                                    <i class="bi bi-geo-alt-fill text-muted"></i>
                                    {{ distribution.destination|length > 50 ? distribution.destination|slice(0, 50) ~ '...' : distribution.destination }}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar {% if distribution.distributionPercentage >= 100 %}bg-success{% elseif distribution.distributionPercentage >= 50 %}bg-primary{% else %}bg-warning{% endif %}"
                                         role="progressbar"
                                         style="width: {{ distribution.distributionPercentage }}%"
                                         aria-valuenow="{{ distribution.distributionPercentage }}"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        {{ distribution.quantityDistributed }} / {{ distribution.quantity }}
                                    </div>
                                </div>
                                <small class="text-muted">Restant: {{ distribution.quantityRemaining }}</small>
                            </td>
                            <td>{{ distribution.createdAt ? distribution.createdAt|date('d/m/Y H:i') : '' }}</td>
                            <td>
                                {% if distribution.completedAt %}
                                    <i class="bi bi-calendar-check text-success"></i>
                                    {{ distribution.completedAt|date('d/m/Y H:i') }}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if distribution.status != 'delivered' %}
                                    {# Bouton Terminer la tournée #}
                                    <button type="button"
                                            class="btn btn-sm btn-success"
                                            onclick="confirmComplete({{ distribution.id }})"
                                            title="Terminer la tournée">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                {% endif %}
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_distribution_edit', {'id': distribution.id}) }}"
                                       class="btn btn-sm btn-dark"
                                       title="{{ 'distribution.actions.edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ distribution.id }})"
                                            title="{{ 'distribution.actions.delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                {# Formulaire de complétion caché #}
                                <form id="complete-form-{{ distribution.id }}"
                                      action="{{ path('app_distribution_complete', {'id': distribution.id}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ distribution.id) }}">
                                </form>

                                {# Formulaire de suppression caché #}
                                <form id="delete-form-{{ distribution.id }}"
                                      action="{{ path('app_distribution_delete', {'id': distribution.id}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ distribution.id) }}">
                                </form>
                            </td>


                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center">{{ 'distribution.list.no_distributions'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        initDataTable('#distributions-table');
        function confirmComplete(id) {
            if (confirm('Terminer la tournée ?\n\nLes magazines non distribués seront retournés à l\'entrepôt.\nCette action mettra à jour le stock.')) {
                document.getElementById('complete-form-' + id).submit();
            }
        }
    </script>
{% endblock %}
