{% extends 'base.html.twig' %}

{% block title %}{{ 'stock.list.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'stock.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'breadcrumb.stocks'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ 'stock.title.subtitle'|trans }}</h4>
                <a href="{{ path('app_stock_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> {{ 'stock.actions.new'|trans }}
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                    <tr>
                        <th>{{ 'stock.table.id'|trans }}</th>
                        <th>{{ 'nav.warehouses'|trans }}</th>
                        <th>{{ 'nav.rack'|trans }}</th>
                        <th>{{ 'stock.table.quantity'|trans }}</th>
                        <th>{{ 'nav.products'|trans }}</th>
                        <th>{{ 'stock.table.create_at'|trans }}</th>
                        <th>{{ 'stock.table.note'|trans }}</th>
                        <th>{{ 'stock.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for stock in stocks %}
                        <tr>
                            <td>{{ stock.id }}</td>
                            <td>
                                {{ stock.rack.warehouse.name }}
                            </td>
                            <td>
                                {{ stock.rack.name }}
                            </td>
                            <td>
                                {% if stock.quantity > 0 %}
                                    <span class="badge bg-success">{{ stock.quantity }}</span>
                                {% elseif stock.quantity == 0 %}
                                    <span class="badge bg-warning">{{ stock.quantity }}</span>
                                {% else %}
                                    <span class="badge bg-danger">{{ stock.quantity }}</span>
                                {% endif %}
                            </td>
                            <td>{{ stock.product.name }}</td>
                            <td>{{ stock.createAt ? stock.createAt|date('d/m/Y H:i') : '-' }}</td>
                            <td>{{ stock.note|default('-') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_stock_show', {'id': stock.id}) }}"
                                       class="btn btn-sm btn-info"
                                       title="{{ 'stock.actions.show'|trans }}">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_stock_edit', {'id': stock.id}) }}"
                                       class="btn btn-sm btn-warning"
                                       title="{{ 'stock.actions.edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ stock.id }})"
                                            title="{{ 'stock.actions.delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                {# Formulaire de suppression cach√© #}
                                <form id="delete-form-{{ stock.id }}"
                                      action="{{ path('app_stock_delete', {'id': stock.id}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">{{ 'stock.list.no_stocks'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let table1 = document.querySelector('#table1');
        let dataTable = new simpleDatatables.DataTable(table1, {
            searchable: true,
            fixedHeight: false,
            perPage: 10,
            labels: {
                placeholder: "{{ 'datatable.search'|trans }}",
                noRows: "{{ 'datatable.no_data'|trans }}",
                info: "{{ 'datatable.info'|trans }}"
            }
        });

        function confirmDelete(stockId) {
            if (confirm("{{ 'stock.confirm_delete'|trans }}")) {
                document.getElementById('delete-form-' + stockId).submit();
            }
        }
    </script>
{% endblock %}
