{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ 'stock.list.title'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'stock.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'breadcrumb.stocks'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ 'stock.list.title'|trans }}</h4>
                <a href="{{ path('app_stock_new') }}" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i> {{ 'stock.actions.new'|trans }}
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="stocks-table">
                    <thead>
                    <tr>
                        <th>{{ 'stock.table.id'|trans }}</th>
                        <th>{{ 'stock.table.warehouse'|trans }}</th>
                        <th>{{ 'stock.table.product'|trans }}</th>
                        <th>{{ 'stock.table.quantity'|trans }}</th>
                        <th>{{ 'stock.table.note'|trans }}</th>
                        <th>{{ 'stock.table.created_at'|trans }}</th>
                        <th>{{ 'stock.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for stock in stocks %}
                        <tr>
                            <td>{{ stock.id }}</td>
                            <td>
                                {% if stock.warehouse %}
                                    <i class="bi bi-building text-primary"></i>
                                    <a href="{{ path('app_warehouse_edit', {'id': stock.warehouse.id}) }}"
                                       class="text-decoration-none">
                                        {{ stock.warehouse.name }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if stock.product %}
                                    <i class="bi bi-book text-info"></i>
                                    <a href="{{ path('app_product_edit', {'id': stock.product.id}) }}"
                                       class="text-decoration-none">
                                        {{ stock.product.name }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if stock.quantity > 0 %}
                                    <span class="badge bg-success">
                                        <i class="bi bi-boxes"></i> {{ stock.quantity }}
                                    </span>
                                {% elseif stock.quantity == 0 %}
                                    <span class="badge bg-warning">
                                        <i class="bi bi-exclamation-triangle"></i> {{ stock.quantity }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ stock.quantity }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if stock.note %}
                                    <i class="bi bi-chat-left-text text-muted"></i>
                                    {{ stock.note|length > 50 ? stock.note|slice(0, 50) ~ '...' : stock.note }}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>{{ stock.createdAt ? stock.createdAt|date('d/m/Y H:i') : '' }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_stock_edit', {'id': stock.id}) }}"
                                       class="btn btn-sm btn-dark"
                                       title="{{ 'stock.actions.edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ stock.id }})"
                                            title="{{ 'stock.actions.delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                {# Formulaire de suppression cach√© #}
                                <form id="delete-form-{{ stock.id }}"
                                      action="{{ path('app_stock_delete', {'id': stock.id}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">{{ 'stock.list.no_stocks'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        initDataTable('#stocks-table');
    </script>
{% endblock %}
