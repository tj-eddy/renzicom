{% extends 'base.html.twig' %}

{% block title %}{{ 'rack.actions.show'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'rack.actions.show'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_rack_index') }}">{{ 'breadcrumb.racks'|trans }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'rack.actions.show'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">{{ 'rack.actions.show'|trans }}</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th style="width: 40%;">{{ 'rack.table.id'|trans }}</th>
                                <td>{{ rack.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'rack.table.name'|trans }}</th>
                                <td><strong>{{ rack.name }}</strong></td>
                            </tr>
                            <tr>
                                <th>{{ 'rack.table.display'|trans }}</th>
                                <td>
                                    {% if rack.display %}
                                        <i class="bi bi-card-list"></i> {{ rack.display.name }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>{{ 'rack.table.position'|trans }}</th>
                                <td><span class="badge bg-secondary">{{ rack.position }}</span></td>
                            </tr>
                            <tr>
                                <th>{{ 'rack.table.created_at'|trans }}</th>
                                <td>{{ rack.createdAt ? rack.createdAt|date('d/m/Y H:i') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h5 class="card-title mb-3"><i class="bi bi-boxes"></i> {{ 'rack.table.fill_rate'|trans }}</h5>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>{{ 'rack.table.current_quantity'|trans }}: {{ rack.currentQuantity }} / {{ rack.requiredQuantity }}</span>
                                        <span class="fw-bold">{{ rack.fillRate|number_format(0) }}%</span>
                                    </div>
                                    <div class="progress" style="height: 20px;">
                                        {% set fillRate = rack.fillRate %}
                                        <div class="progress-bar {% if fillRate >= 75 %}bg-success{% elseif fillRate >= 50 %}bg-warning{% else %}bg-danger{% endif %}"
                                             role="progressbar"
                                             style="width: {{ fillRate }}%"
                                             aria-valuenow="{{ fillRate }}"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <h5 class="card-title mb-3"><i class="bi bi-book"></i> {{ 'rack.table.product'|trans }}</h5>
                                {% if rack.product %}
                                    <div class="d-flex align-items-center">
                                        {% if rack.product.image %}
                                            <img src="{{ asset('uploads/products/' ~ rack.product.image) }}" alt="{{ rack.product.name }}" class="img-fluid rounded me-3" style="max-height: 80px;">
                                        {% endif %}
                                        <div>
                                            <strong>{{ rack.product.name }}</strong><br>
                                            <small class="text-muted">{{ rack.product.language|upper }} - {{ rack.product.yearEdition }}</small>
                                        </div>
                                    </div>
                                {% else %}
                                    <p class="text-muted">-</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="{{ path('app_rack_index') }}" class="btn btn-light-secondary">
                        <i class="bi bi-arrow-left-circle"></i> {{ 'actions.back'|trans }}
                    </a>
                    <a href="{{ path('app_rack_edit', {'id': rack.id}) }}" class="btn btn-dark">
                        <i class="bi bi-pencil"></i> {{ 'rack.actions.edit'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
