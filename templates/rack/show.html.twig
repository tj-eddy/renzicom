{% extends 'base.html.twig' %}

{% block title %}Rack{% endblock %}

{% block body %}
    <h1>Rack</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rack.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ rack.name }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ rack.position }}</td>
            </tr>
            <tr>
                <th>RequiredQuantity</th>
                <td>{{ rack.requiredQuantity }}</td>
            </tr>
            <tr>
                <th>CurrentQuantity</th>
                <td>{{ rack.currentQuantity }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ rack.createdAt ? rack.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_rack_index') }}">back to list</a>

    <a href="{{ path('app_rack_edit', {'id': rack.id}) }}">edit</a>

    {{ include('rack/_delete_form.html.twig') }}
{% endblock %}
