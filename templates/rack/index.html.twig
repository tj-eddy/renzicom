{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ 'rack.list.title'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'rack.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'breadcrumb.racks'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ 'rack.list.title'|trans }}</h4>
                <a href="{{ path('app_rack_new') }}" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i> {{ 'rack.actions.new'|trans }}
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="racks-table">
                    <thead>
                    <tr>
                        <th>{{ 'rack.table.id'|trans }}</th>
                        <th>{{ 'rack.table.name'|trans }}</th>
                        <th>{{ 'rack.table.display'|trans }}</th>
                        <th>{{ 'rack.table.product'|trans }}</th>
                        <th>{{ 'rack.table.position'|trans }}</th>
                        <th>{{ 'rack.table.required_quantity'|trans }}</th>
                        <th>{{ 'rack.table.current_quantity'|trans }}</th>
                        <th>{{ 'rack.table.fill_rate'|trans }}</th>
                        <th>{{ 'rack.table.created_at'|trans }}</th>
                        <th>{{ 'rack.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for rack in racks %}
                        <tr>
                            <td>{{ rack.id }}</td>
                            <td>
                                <i class="bi bi-hdd-rack text-primary"></i>
                                <strong>{{ rack.name }}</strong>
                            </td>
                            <td>
                                {% if rack.display %}
                                    <i class="bi bi-card-list"></i>
                                    <a href="{{ path('app_display_edit', {'id': rack.display.id}) }}"
                                       class="text-decoration-none">
                                        {{ rack.display.name }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if rack.product %}
                                    <i class="bi bi-book"></i>
                                    <a href="{{ path('app_product_edit', {'id': rack.product.id}) }}"
                                       class="text-decoration-none">
                                        {{ rack.product.name }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-secondary">{{ rack.position }}</span>
                            </td>
                            <td>{{ rack.requiredQuantity }}</td>
                            <td>{{ rack.currentQuantity }}</td>
                            <td>
                                {% set fillRate = rack.fillRate %}
                                {% if fillRate >= 75 %}
                                    <span class="badge bg-success">{{ fillRate|number_format(0) }}%</span>
                                {% elseif fillRate >= 50 %}
                                    <span class="badge bg-warning">{{ fillRate|number_format(0) }}%</span>
                                {% else %}
                                    <span class="badge bg-danger">{{ fillRate|number_format(0) }}%</span>
                                {% endif %}
                            </td>
                            <td>{{ rack.createdAt ? rack.createdAt|date('d/m/Y H:i') : '' }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_rack_edit', {'id': rack.id}) }}"
                                       class="btn btn-sm btn-dark"
                                       title="{{ 'rack.actions.edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ rack.id }})"
                                            title="{{ 'rack.actions.delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                {# Formulaire de suppression cach√© #}
                                <form id="delete-form-{{ rack.id }}"
                                      action="{{ path('app_rack_delete', {'id': rack.id}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rack.id) }}">
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10" class="text-center">{{ 'rack.list.no_racks'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        initDataTable('#racks-table');
    </script>
{% endblock %}
