{% extends 'base.html.twig' %}

{% block title %}{{ 'product.list.title'|trans }}{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'product.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'breadcrumb.products'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/vendors/simple-datatables/style.css') }}">
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ 'product.list.title'|trans }}</h4>
                <a href="{{ path('app_product_new', {'_locale': app.request.locale}) }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> {{ 'product.actions.new'|trans }}
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                    <tr>
                        <th>{{ 'product.table.id'|trans }}</th>
                        <th>{{ 'product.table.name'|trans }}</th>
                        <th>{{ 'product.table.year_edition'|trans }}</th>
{#                        <th>{{ 'product.table.language'|trans }}</th>#}
                        <th>{{ 'product.table.variant'|trans }}</th>
                        <th>{{ 'product.table.images'|trans }}</th>
                        <th>{{ 'product.table.created_at'|trans }}</th>
                        <th>{{ 'product.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.yearEdition ?? '-' }}</td>
{#                            <td>{{ product.language|upper ?? '-' }}</td>#}
                            <td>{{ product.variant ?? '-' }}</td>
                            <td>
                                <span class="badge bg-info">
                                    {{ product.images|length }}
                                    {% if product.images|length > 1 %}
                                        {{ 'product.table.images_count'|trans }}
                                    {% else %}
                                        {{ 'product.table.image_count'|trans }}
                                    {% endif %}
                                </span>
                            </td>
                            <td>{{ product.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_product_show', {'id': product.id, '_locale': app.request.locale}) }}"
                                       class="btn btn-sm btn-info"
                                       title="{{ 'product.actions.show'|trans }}">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_product_edit', {'id': product.id, '_locale': app.request.locale}) }}"
                                       class="btn btn-sm btn-warning"
                                       title="{{ 'product.actions.edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ product.id }})"
                                            title="{{ 'product.actions.delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <form id="delete-form-{{ product.id }}"
                                      action="{{ path('app_product_delete', {'id': product.id, '_locale': app.request.locale}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">{{ 'product.list.no_products'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendors/simple-datatables/simple-datatables.js') }}"></script>
    <script>
        let table1 = document.querySelector('#table1');
        let dataTable = new simpleDatatables.DataTable(table1, {
            searchable: true,
            fixedHeight: false,
            perPage: 10,
            labels: {
                placeholder: "{{ 'datatable.search'|trans }}",
                noRows: "{{ 'datatable.no_data'|trans }}",
                info: "{{ 'datatable.info'|trans }}"
            }
        });

        function confirmDelete(productId) {
            if (confirm("{{ 'product.confirm_delete'|trans }}")) {
                document.getElementById('delete-form-' + productId).submit();
            }
        }
    </script>
{% endblock %}
