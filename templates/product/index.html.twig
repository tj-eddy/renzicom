{% extends 'base.html.twig' %}

{% block title %}{{ 'product.list.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_title %}
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>{{ 'product.list.title'|trans }}</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a
                                href="{{ path('app_dashboard') }}">{{ 'breadcrumb.home'|trans }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'breadcrumb.products'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ 'product.list.title'|trans }}</h4>

                <a href="{{ path('app_product_new', {'_locale': app.request.locale}) }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> {{ 'product.actions.new'|trans }}
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="product-table">
                    <thead>
                    <tr>
                        <th>{{ 'product.table.id'|trans }}</th>
                        <th>{{ 'product.table.name'|trans }}</th>
                        <th>{{ 'product.table.year_edition'|trans }}</th>
                        {#                        <th>{{ 'product.table.language'|trans }}</th> #}
                        <th>{{ 'product.table.variant'|trans }}</th>
                        <th>{{ 'product.table.created_at'|trans }}</th>
                        <th>{{ 'product.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.yearEdition ?? '-' }}</td>
                            {#                            <td>{{ product.language|upper ?? '-' }}</td> #}
                            <td>{{ product.variant ?? '-' }}</td>
                            <td>{{ product.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_product_edit', {'id': product.id, '_locale': app.request.locale}) }}"
                                       class="btn btn-sm btn-warning"
                                       title="{{ 'product.actions.edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ product.id }})"
                                            title="{{ 'product.actions.delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <form id="delete-form-{{ product.id }}"
                                      action="{{ path('app_product_delete', {'id': product.id, '_locale': app.request.locale}) }}"
                                      method="post"
                                      style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">{{ 'product.list.no_products'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="card-header d-flex justify-content-between align-items-center">
                    <button type="button" class="btn btn-success me-2" id="btnExport">
                        <i class="bi bi-download"></i> {{ 'stock.actions.export'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </section>

    {# Modal de confirmation #}

    <div class="modal fade text-left" id="exportConfirmModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel19" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-sm"
             role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel19">{{ 'stock.export.confirm.title'|trans }}</h4>
                    <button type="button" class="close" data-bs-dismiss="modal"
                            aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    {{ 'stock.export.confirm.message'|trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-secondary btn-sm"
                            data-bs-dismiss="modal">
                        <i class="bx bx-x d-block d-sm-none"></i>
                        <span class="d-sm-block d-none">{{ 'actions.cancel'|trans }}</span>
                    </button>
                    <button id="btnConfirmExport" type="button" class="btn btn-primary ml-1 btn-sm"
                            data-bs-dismiss="modal">
                        <i class="bx bx-check d-block d-sm-none"></i>
                        <span class="d-sm-block d-none"> {{ 'stock.export.confirm.yes'|trans }}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade text-left" id="small" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel19" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-sm"
             role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel19">{{ 'stock.export.confirm.title'|trans }}</h4>
                    <button type="button" class="close" data-bs-dismiss="modal"
                            aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    {{ 'stock.export.confirm.message'|trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-secondary btn-sm"
                            data-bs-dismiss="modal">
                        <i class="bx bx-x d-block d-sm-none"></i>
                        <span class="d-sm-block d-none">{{ 'actions.cancel'|trans }}</span>
                    </button>
                    <button type="button" class="btn btn-primary ml-1 btn-sm" id="btnConfirmExport"
                            data-bs-dismiss="modal">
                        <i class="bx bx-check d-block d-sm-none"></i>
                        <span class="d-sm-block d-none"> {{ 'stock.export.confirm.yes'|trans }}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    {# Modal de progression #}
    <div class="modal fade" id="exportProgressModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center py-5">
                    <div class="spinner-border text-success mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <h5 class="mb-2">{{ 'stock.export.progress.title'|trans }}</h5>
                    <p class="text-muted mb-0">{{ 'stock.export.progress.message'|trans }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        initDataTable('#product-table');
        initExport('{{ path('app_export_products_stock_generate') }}');
    </script>
{% endblock %}
