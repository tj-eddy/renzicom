<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('{{ 'actions.confirm_delete'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn">{{ 'actions.delete'|trans }}</button>
</form>
