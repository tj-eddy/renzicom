{% block body %}
    <h1>Intervention</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ intervention.id }}</td>
            </tr>
            <tr>
                <th>QuantityAdded</th>
                <td>{{ intervention.quantityAdded }}</td>
            </tr>
            <tr>
                <th>PhotoBefore</th>
                <td>{{ intervention.photoBefore }}</td>
            </tr>
            <tr>
                <th>PhotoAfter</th>
                <td>{{ intervention.photoAfter }}</td>
            </tr>
            <tr>
                <th>Notes</th>
