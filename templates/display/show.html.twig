{% extends 'base.html.twig' %}

{% block title %}Display{% endblock %}

{% block body %}
    <h1>Display</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ display.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ display.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ display.location }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ display.createdAt ? display.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_display_index') }}">back to list</a>

    <a href="{{ path('app_display_edit', {'id': display.id}) }}">edit</a>

    {{ include('display/_delete_form.html.twig') }}
{% endblock %}
